<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">




<mapper namespace="org.unomi.myspring.mapper.UserMapper">


    <sql id="select">
        select id from user
    </sql>
    <select id="selectAll" resultType="org.unomi.myspring.entity.User">
        select * from user
    </select>

    <delete id="deleteById" >

delete from user where id in
        <foreach collection="ids" item="id"  separator="," open="(" close=")">
            #{id}

        </foreach>




    </delete>

    <select id="selectById" resultType="org.unomi.myspring.entity.User">
<include refid="select"></include>
where id =#{id}
    </select>



</mapper>